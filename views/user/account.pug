extends ./layout.pug

block content
    - var data = data;
    #user_info.conatiner
        .row
            .col-2
                h6 Name
                span=data[0].fname + " " + data[0].lname
        br
        .row
            .col-2 
                h6 Institution
                span FFU
            .col-2
                h6 Position
                span doc
            .col-2 
                h6 Employee ID
                span ##
        br
        .row
            .col-3
                h6 Email Address 
                span blah@blah
            .col-3
                h6 Phone Number
                span ##
    h3#sub_title Edit Account


    form#information(action='/user/account' method='post' enctype="application/x-www-form-urlencoded")
    .row.mb-1
        .col-3
            label(for='fname') First Name:
            input.form-control(type='text' placeholder=data[0].fname name='fname' required)
        .col-3
            label(for='lname') Last Name:
            input.form-control(type='text' placeholder='Last Name' name='lname' required)
    br
    .row.mb-1
        .col
            label(for='instn') Institution:
            select.form-control(name='instn' required)
                option(value="ffu") Fimon Fraser University
                option(value="gg") GcGill University
                option(value="uor") University of Roronto
        .col
            label(for='posn') Position:
            select.form-control(name='posn' required)
                option(value="doc") Doctor
                option(value="nurse") Nurse
                option(value="student") Student
        .col-3
            label(for='empID') Employee ID:
            input.form-control(type='number' placeholder='' name='empID' required)
    br
    .row.mb-1
        .col-3
            label(for='email') Email Address:
            input.form-control(type='email' placeholder='address@email.com' name='email' required)
        .col-3
            label(for='phn') Phone Number:
            input.form-control(type='tel' placeholder='555-123-4567' name='phn' pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" required)
    .col-2.mt-4
        button#formbtn.btn.mb-2(type='submit') Submit
