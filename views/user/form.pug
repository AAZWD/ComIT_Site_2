-var url = '/user/' + action;

form#information(action=url method='post' enctype="application/x-www-form-urlencoded")
    .row.mb-1
        .col-3
            label(for='fname') First Name:
            input.form-control(type='text' placeholder='First Name' name='fname')
        .col-3
            label(for='lname') Last Name:
            input.form-control(type='text' placeholder='Last Name' name='lname')
    br
    .row.mb-1
        .col
            label(for='instn') Institution:
            select.form-control(name='instn')
                option(value="fimon fraser university") Fimon Fraser University
                option(value="gcgill") GcGill University
                option(value="university of roronto") University of Roronto
        .col
            label(for='posn') Position:
            select.form-control(name='posn')
                option(value="doc") Doctor
                option(value="nurse") Nurse
                option(value="student") Student
        .col-3
            label(for='empID') Employee ID:
            input.form-control(type='text' placeholder='' name='empID')
    br
    .row.mb-1
        .col-3
            label(for='email') Email Address:
            input.form-control(type='email' placeholder='address@email.com' name='email')
        .col-3
            label(for='phn') Phone Number:
            input.form-control(type='tel' placeholder='555-123-4567' name='phn' pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}")
    .col-2.mt-4
        button#formbtn.btn.mb-2(type='submit') Submit
